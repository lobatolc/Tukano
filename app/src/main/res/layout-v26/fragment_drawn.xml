<?xml version="1.0" encoding="utf-8"?>
    <layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <data class="DrawnUI"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:padding="16dp"
            tools:context=".drawnFragment">

            <com.github.gcacace.signaturepad.views.SignaturePad
                android:id="@+id/signature_pad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:penColor="@android:color/black"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

                <com.madrapps.pikolo.RGBColorPicker
                    android:id="@+id/colChangeColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_change_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    app:fabSize="mini"
                    app:fab_colorNormal="#000920"
                    app:fab_colorPressed="#00040E"
                    app:fab_icon="@drawable/ic_check"
                    app:layout_constraintBottom_toBottomOf="@+id/signature_pad"
                    app:layout_constraintEnd_toEndOf="@+id/signature_pad"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/signature_pad" />

            <SeekBar
                android:id="@+id/sek_pencil"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:max="98"
                android:min="2"
                android:progress="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_min="300dp" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_seek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                app:fabSize="mini"
                app:fab_colorNormal="#000920"
                app:fab_colorPressed="#00040E"
                app:fab_icon="@drawable/ic_check"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sek_pencil" />

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/fb_visits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|right"
                android:layout_margin="18dp"
                android:elevation="2dp"
                app:backgroundTint="#000920"
                app:fab_colorNormal="#000920"
                app:fab_colorPressed="#00040E"
                app:fab_icon="@drawable/ic_brush"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:fab_addButtonColorNormal="#000920"
                app:rippleColor="#000920"
                app:tint="#000920"
                tools:ignore="RtlHardcoded">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_change_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    app:fab_colorNormal="#000920"
                    app:fab_colorPressed="#00040E"
                    app:fab_icon="@drawable/ic_color" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    app:fab_colorNormal="#000920"
                    app:fab_colorPressed="#00040E"
                    app:fab_icon="@drawable/ic_delete" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_colorNormal="#000920"
                    app:fab_colorPressed="#00040E"
                    app:fab_icon="@drawable/ic_settings" />
            </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>